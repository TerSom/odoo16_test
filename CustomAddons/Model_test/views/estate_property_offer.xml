<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <!-- tree view -->
    <record id="estate_property_offer_list" model="ir.ui.view">
        <field name="name">Estate Property Offer tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree editable="bottom" decoration-danger="status == 'refused'"
                decoration-success="status == 'accepted'">
                <field name="price"></field>
                <field name="partner_id"></field>
                <field name="validity"></field>
                <field name="date_deadline"></field>
                <field name="property_state"></field>
                <button name="action_Accept"
                    help="Accept"
                    type="object"
                    icon="fa-check"
                    attrs="{'invisible': ['|', ('status', '!=', False), ('property_state', 'in', ['offer Received','sold','cancelled'])]}" />
                <button name="action_Refuse"
                    help="Refuse"
                    type="object"
                    icon="fa-times"
                    attrs="{'invisible': ['|', ('status', '!=', False), ('property_state', 'in', ['offer Received','sold','cancelled'])]}" />
                <field name="status" invisible='1'></field>
            </tree>
        </field>
    </record>

    <!-- form views -->
    <record id="estate_property_offer_form" model="ir.ui.view">
        <field name="name">Estate Property Offer form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="price"></field>
                        <field name="partner_id"></field>
                        <field name="validity"></field>
                        <field name="date_deadline"></field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>