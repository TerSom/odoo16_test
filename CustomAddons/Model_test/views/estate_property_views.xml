<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">estate property action</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

    <!-- tree view -->
    <record id="estate_property_list" model="ir.ui.view">
        <field name="name">estate propery tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree decoration-success="status in ['offer Received', 'offer Accepted']"
                decoration-bf="status == 'offer Accepted'" decoration-muted="status == 'sold'">
                <field name="title"></field>
                <field name="property_type_id"></field>
                <field name="postcode"></field>
                <field name="property_tag_ids" widget="many2many_tags"
                    options="{'color_field': 'color'}" class="pb-3"></field>
                <field name="bedrooms" optional="hiden"></field>
                <field name="living_area" optional="hiden"></field>
                <field name="expected_price"></field>
                <field name="selling_price"></field>
                <field name="date_availability" optional="hiden"></field>
                <field name="status"></field>
            </tree>
        </field>
    </record>


    <!-- form view -->
    <record id="estate_property_form" model="ir.ui.view">
        <field name="name">estate property</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Test">
                <header>
                    <button name="action_sold" type="object" string="Sold"
                        attrs="{'invisible': [('status', '!=', 'offer Accepted')]}" />
                    <button name="action_cancel" type="object" string="Cancel"
                        attrs="{'invisible': [('status', '!=', 'offer Accepted')]}" />

                    <field name="status" widget="statusbar"
                        statusbar_visible="new,offer Received,offer Accepted,sold"></field>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="title"></field>
                        </h1>
                    </div>
                    <group>
                        <field name="property_tag_ids" widget="many2many_tags"
                            options="{'color_field': 'color'}" class="pb-3"></field>
                        <group>
                            <field name="property_type_id" />
                            <field name="postcode"></field>
                            <field name="date_availability" />
                            <field name="status" groups="base.group_no_one" />
                        </group>
                        <group>
                            <field name="expected_price" />
                            <field name="best_price" string="best offer" />
                            <field name="selling_price" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description" />
                                <field name="bedrooms" />
                                <field name="living_area" />
                                <field name="facades" />
                                <field name="garage" />
                                <field name="garden" />
                                <field name="garden_area"
                                    attrs="{'invisible': [('garden', '=', False)]} " />
                                <field name="garden_orientation"
                                    attrs="{'invisible': [('garden', '=', False)]}" />
                                <field name="total_area" />
                            </group>
                        </page>
                        <page string="Other info">
                            <group>
                                <field name="salesperson_id"></field>
                                <field name="buyer_id"></field>
                            </group>
                        </page>
                        <page string="offers">
                            <field name="offer_ids"
                                attrs="{'readonly':[('status','in',['offer Received','offer Accepted','sold','cancelled'])]}"></field>
                        </page>
                        <page string="Active">
                            <group>
                                <field name="active"></field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- kanban view -->
    <record id="estate_propery_kanban" model="ir.ui.view">
        <field name="name">estate property </field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="property_type_id" records_draggable="False">
                <field name="status" />
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div style="font-weight:bold;">
                                <field name="property_type_id"></field>
                            </div>
                            <div style="color:grey;">
                                <div>
                                    Expected Pirice : <field name="expected_price"></field>
                                </div>
                                <div t-if="record.status.raw_value != 'new'">
                                    Best Offer : <field name="best_price"></field>
                                </div>
                                <div
                                    t-if="record.status.raw_value != 'new' and record.status.raw_value != 'offer Received'">
                                    Selling Price : <field name="selling_price"></field>
                                </div>
                            </div>
                            <div>
                                <field name="property_tag_ids" options="{'color_field': 'color'}" class="pb-3"></field>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- search view -->
    <record id="estate_property_search" model="ir.ui.view">
        <field name="name">estate propery search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="title"></field>
                <field name="postcode"></field>
                <field name="expected_price"></field>
                <field name="bedrooms"></field>
                <field name="living_area"
                    filter_domain="['|', ('living_area', 'ilike', self), ('living_area', '>=', self)]"></field>
                <field name="facades"></field>
                <field name="property_type_id"></field>
                <filter name="status" string="Available"
                    domain="[('status', 'in', ['new','offer received'] )]" />
                <group string="group_by">
                    <filter name="postcode" string="Postcode" context="{'group_by':'postcode'}"></filter>
                    <filter name="Available" string="Available"></filter>
                </group>
            </search>
        </field>
    </record>
</odoo>